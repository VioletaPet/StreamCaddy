<%= simple_form_for(:select, url: user_providers_path, method: :get) do |f| %>
  <%= f.input :watch_provider_ids, as: :check_boxes, collection: WatchProvider.all.map { |provider| [provider.name, provider.id] }, input_html: { multiple: true }, prompt: "Select a streaming platform" %>
  <%= f.submit "Select", class: "btn btn-primary" %>
<% end %>
