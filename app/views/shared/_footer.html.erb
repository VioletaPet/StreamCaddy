<div class="main-content">

<footer class="footer text-white text-center py-3 mt-auto">
  <div class="footer-wrap">
  <%= link_to media_path, class: "icon-link #{'active' if current_page?(media_path)}" do %>
    <i class="fa-solid fa-house"></i>
  <% end %>

  <%= link_to schedule_watchlist_media_path, class: "icon-link #{'active' if current_page?(schedule_watchlist_media_path)}" do %>
    <i class="fa-regular fa-calendar-days"></i>
  <% end %>

  <%= link_to watchlist_media_path, class: "icon-link #{'active' if current_page?(watchlist_media_path)}" do %>
    <i class="fa-solid fa-bars-staggered"></i>
  <% end %>

  <%= link_to game_path, class: "icon-link #{'active' if current_page?(game_path)}" do %>
    <i class="fa-solid fa-shuffle"></i>
  <% end %>
</div>

</footer>

</div>
