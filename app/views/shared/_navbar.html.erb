<div class="navbar">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand d-flex" do %>
      <%= image_tag "logo.jpeg"%>
    <% end %>

    <div class="avatar">
      <%= image_tag current_user&.avatar.presence || asset_path('avatar.jpeg'),
        alt: "Profile",
        class: "rounded-circle",
        style: "width: 40px; height: 40px;" %>
    </div>
  </div>
</div>

<div class="navbar navbar-expand-sm navbar-light bg-light">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand d-flex" do %>
      <%= image_tag "logo.jpeg"%>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active d-flex justify-content-center">
            <%= link_to "Home", media_path, class: "nav-link" %>
            <%= link_to "My watchlist", watchlist_media_path, class: "nav-link" %>
            <%= link_to "Game", game_path, class: "nav-link" %>
            <%= link_to "My Profile", show_path, class: "nav-link" %>
          </li>

          <li class="nav-item dropdown">
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", show_path, class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
