<div id="tinder-game">
  <h1>Swipe to Discover Movies & TV Shows</h1>

  <div id="movie-card">
    <img src="https://image.tmdb.org/t/p/w500<%= @random_media['poster_path'] %>"
       alt="<%= @random_media['title'] || @random_media['name'] %> Poster"
       class="img-fluid rounded">
    <h2><%= @random_media['title'] || @random_media['name'] %></h2>
  </div>

</div>
<%= link_to "Dislike", game_dislike_path(params: @random_media), data: {"turbo-method": :post} %>
<%= link_to "Skip", game_skip_path(params: @random_media), data: {"turbo-method": :post} %>
<%= link_to "Like", game_like_path(params: @random_media), data: {"turbo-method": :post} %>
