<div class="container mt-3 mx-3">
  <%= link_to medium_path(@media.api_id) do %>
    <i class="fa-solid fa-arrow-left"></i>
  <% end %>
  <h1><%= @actor.name %></h1>
  <div class="actor-card d-flex flex-column align-items-center justify-content-center">
    <div class="col">
      <%= cl_image_tag @actor.photos.first.key, alt: "#{@actor.name} Poster", class: "img-fluid rounded" %>
      <p><%= @actor.bio %></p>
    </div>
  </div>
</div>
