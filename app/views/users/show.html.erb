<div class="container text-center mt-5">

  <img class="profile-img" src="https://avatarfiles.alphacoders.com/130/130431.jpg" alt="profile-picture" width=150 height=150>
  <h3 class="mt-3"><%= @user.first_name %> <%= @user.last_name %></h3>
  <div class="userprofile-provider">
    <% current_user.watch_providers.each do |provider| %>
      <div class="user-provider-logo">
        <%= cl_image_tag(provider.logo.key, alt: "#{provider.name} Logo" ,style: "height: 40px; width: auto; object-fit: contain; border-radius: 50%;") %>
      </div>
    <% end %>
  </div>

  <div class="options text-center mt-5">
  <button class="btn btn-primary"><%= link_to 'My watchlist', watchlist_media_path %></button>
  <button class="btn btn-primary"><%= link_to 'Streaming Platforms', user_providers_path %></button>
  <button class="btn btn-primary"><%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %></button>
  </div>
</div>
