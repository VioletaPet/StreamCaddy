<div class="container mt-5">
  <h1 class="text-center display-4 mb-4">My Watchlist</h1>

  <!-- Provider Sections -->
  <% @provider_content.each do |provider, content| %>
    <div class="provider-section mb-5">
      <h2 class="text-primary mb-4"><%= provider.name.capitalize %></h2>

      <!-- Free Content -->
      <% if content[:free].any? %>
        <h3 class="text-success mb-3">Free Content</h3>
        <div class="scroll-container d-flex overflow-auto">
          <% content[:free].each do |item| %>
            <div class="card content-card">
              <h5 class="card-title"><%= item[:media].title %></h5>
              <p>Score: <%= item[:score] %></p>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Paid Content -->
      <% if content[:paid].any? %>
        <h3 class="text-danger mt-4 mb-3">Paid or Rented Content</h3>
        <div class="scroll-container d-flex overflow-auto">
          <% content[:paid].each do |item| %>
            <div class="card content-card">
              <h5 class="card-title"><%= item[:media].title %></h5>
              <p>Score: <%= item[:score] %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Unreleased Content Section -->
  <% if @unreleased_content.any? %>
    <div class="unreleased-section mt-5">
      <h2 class="text-warning mb-4">Unreleased Content</h2>
      <div class="scroll-container d-flex overflow-auto">
        <% @unreleased_content.each do |item| %>
          <div class="card content-card">
            <h5 class="card-title"><%= item[:media].title %></h5>
            <p>Score: <%= item[:score] %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
